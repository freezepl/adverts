<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @advert.title %></dd>
  <dt>Category:</dt>
  <dd><%= @advert.category_id %></dd>
  <dt>Description:</dt>
  <dd><%= @advert.description %></dd>
  <dt>Price:</dt>
  <dd><%= @advert.price %> z≈Ç</dd>
  <dt>Expire:</dt>
  <dd><%= @advert.expire %></dd>
  <dt>Added:</dt>
  <dd><%= @advert.created_at.to_formatted_s(:short) %></dd>
  <dt>Phone:</dt>
  <dd><%= @advert.phone %></dd>
  <% for attachment in @advert.attachments %>
    <dt>Photo:</dt>
    <dd><%= image_tag attachment.file_url %><br><%= attachment.description %></dd>
  <% end %>
</dl>  
<%= link_to 'Edit', edit_advert_path(@advert), class: "btn btn-danger" %>
