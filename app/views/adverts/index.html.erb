<h1>Listing Your adverts</h1>

<table class="table table-hover">
  <tr>
    <th><%= sort_link @search, :title %></th>
    <th><%= sort_link @search, :category_name, "Category" %></th>
    <th>Description</th>
    <th><%= sort_link @search, :price %></th>
    <th><%= sort_link @search, :expire %></th>
    <th><%= sort_link @search, :added %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @adverts.each do |advert| %>
  <tr>
    <td><%= advert.title %></td>
    <td><%= advert.category.name %></td>
    <td><%= truncate_wrap(advert.description) %></td>
    <td><%= advert.price %></td>
    <td><%= advert.expire %></td>
    <td><%= advert.created_at.to_formatted_s(:short) %></td>
    <td><%= link_to 'Show', advert %></td>
    <td><% if @users.id == advert.user_id %>
            <%= link_to 'Edit', edit_advert_path(advert) %>
        <% end %></td>
    <td><% if @users.id == advert.user_id %>
            <%= link_to 'Destroy', advert, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Advert', new_advert_path, class: "btn btn-danger"  %>