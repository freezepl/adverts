<%= nested_form_for @advert, :url => admin_edit_advert_path(@advert), :html=>{:multipart => true } do |f| %>
  <% if @advert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@advert.errors.count, "error") %> prohibited this advert from being saved:</h2>

      <ul>
      <% @advert.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, category_list %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 130, :rows => 10 %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :expire %><br />
    <%= f.date_select :expire %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </div>
    <%= f.fields_for :attachments do |attachment_form|  %>
      <div class="row-fluid">
        <div class="span4 show-grid">
         <div class="field">
          <%= attachment_form.label :description %><br />
          <%= attachment_form.text_field :description %>
          </div>
        </div>
        <div class="span4 show-grid">
          <div class="field">
          <%= attachment_form.label :file %><br />
          <%= attachment_form.file_field :file %>
          <button class="btn" type="button">
          <%= attachment_form.link_to_remove "Remove this attachment" %>
          </button>
          </div>
        </div>
      </div>
    <% end %>
  <div class="actions">
    <%= f.link_to_add "Add attachment", :attachments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
